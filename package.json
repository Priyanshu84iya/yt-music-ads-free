{
  "name": "yt-music-ads-free",
  "version": "1.0.0",
  "private": true,
  "description": "Lightweight Electron wrapper for YouTube Music with ad blocking and media keys.",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.example.ytmusicadsfree",
    "productName": "YT Music (Ad-Free)",
    "win": {
      "target": ["nsis", "portable"],
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    }
  },
  "dependencies": {
    "@cliqz/adblocker-electron": "^1.33.3",
    "electron-store": "^8.2.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "electron": "^31.3.0",
    "electron-builder": "^24.13.3"
  }
}
